@{
  Layout = "_Layout";
}

@model PierresSweetAndSavoryTreats.Models.Flavor

<h2>Edit</h2>

<h4>Edit Flavor: <span class="olive">@Html.DisplayFor(model => model.FlavorName)</span></h4>
<br>
<div class="divClass">
  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.FlavorId)
    <br>
    <p><span class="left olive2">@Html.Label("Flavor Name")</span> <span class="right olive2">
        @Html.EditorFor(model => model.FlavorName)</span></p>
    <br>

    <p><span class="left olive2">@Html.Label("Select Treat")</span> <span class="right olive2">
    @Html.DropDownList("TreatId", null, string.Empty)</span></p>
    <br><br><br>
    <input type="submit" class="btn btn-default" value="Save Edits" />



  }

  <br><br><br>
  <p>@Html.ActionLink("Back to list of Flavors", "Index")</p>
</div>
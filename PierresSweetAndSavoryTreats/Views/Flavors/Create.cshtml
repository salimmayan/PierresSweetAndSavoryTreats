@{
  Layout = "_Layout";
}

@model PierresSweetAndSavoryTreats.Models.Flavor

<h1>Add a new Flavor!</h1>

<div class="divClass">
  @using (Html.BeginForm())
  {
    <p><span class="left olive2">@Html.Label("FlavorName")</span> <span class="right olive2">@Html.TextBoxFor(model =>
      model.FlavorName, new { required = "required"})</span></p>
    <br> <br>
    <p><span class="left olive2">@Html.Label("Eligible Treats")</span> <span class="right olive2">
    @Html.DropDownList("TreatId", null, string.Empty)</span></p>
    <br> <br> <br>

    <input type="submit" value="Add New Flavor" class="btn btn-default" required="true" />
  }
</div>

<br>
<br>
<p>@Html.ActionLink("Show all Flavors", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
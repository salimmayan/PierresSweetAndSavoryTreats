@{
  Layout = "_Layout";
}

@using PierresSweetAndSavoryTreats.Models;

<h1>Treats</h1>

@if (@Model.Count == 0)
{
  <h4>No Treats have been added yet!</h4>
}

@if (@Model.Count != 0)
{
  <div class="divClass">
    <p><span class="left olive2">Treat Name</span>   <span class="right olive2">Treat Price</span></p>
    <br>
    @foreach (Treat treat in Model)

    {
      <span class="left">@Html.ActionLink($"{treat.TreatName}", "Details", new { id = treat.TreatId })</span> <span
    class="right">
        @treat.TreatPrice </span>
      <br>
    }
  </div>
}
<br>

<br>
<br>

<p>@Html.ActionLink("Add new Treat", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
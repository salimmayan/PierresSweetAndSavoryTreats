@{
  Layout = "_Layout";
}
@using PierresSweetAndSavoryTreats.Models
@model PierresSweetAndSavoryTreats.Models.Treat


@ViewBag.FlavorInfo

<h2>Add Flavor to Treat</h2>

<h4>Add a Flavor to Treat <span class="olive">@Html.DisplayFor(model => model.TreatName)</span></h4>
<br>
<div class="divClass">
  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.TreatId)
    <br>
    <p><span class="left olive2">@Html.Label("Select Flavor")</span> <span class="right olive2">
        @Html.DropDownList("FlavorID")</span></p>
    <br>
    <br><br><br>
    <input type="submit" class="btn btn-default" value="Add Flavor to Treat" />
  }

  <p>@Html.ActionLink("Back to Treat Details page", "Details", new {id = Model.TreatId })</p>

</div>